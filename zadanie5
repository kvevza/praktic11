using System;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace priora
{
    class Product
    {
        private double price;
        private int discount;

        public string Name { get; set; } = "Без названия";

        public double Price
        {
            get { return price; }
            set
            {
                if (value >= 0)
                {
                    price = value;
                }
                else
                {
                    Console.WriteLine("Цена не может быть отрицательной!");
                }
            }
        }

        public int Discount
        {
            get { return discount; }
            set
            {
                if (value >= 0 && value <= 100)
                {
                    discount = value;
                }
                else
                {
                    Console.WriteLine("Скидка должна быть от 0 до 100!");
                }
            }
        }

        public double FinalPrice
        {
            get { return Price * (1 - (double)Discount / 100); }
        }

        public Product(double price, int discount)
        {
            Price = price;
            Discount = discount;
        }

        public void Show()
        {
            Console.WriteLine($"{Name}: {FinalPrice} (скидка {Discount}%)");
        }
    }

    class Program
    {
        static void Main(string[] args)
        {
            Product notebook = new Product(1000, 20) { Name = "Ноутбук" };
            notebook.Show();

            notebook.Discount = 10;
            notebook.Show();

            notebook.Price = -500;
            notebook.Show();
        }
    }
}
