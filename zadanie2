using System;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace priora
{
    class Phone
    {
        private int battery;
        private string brand;

        public string Brand
        {
            get { return brand; }
            private set { brand = value; } 
        }

        public int BatteryLevel
        {
            get { return battery; }
            set
            {
                if (value >= 0 && value <= 100)
                {
                    battery = value;
                }
                else
                {
                    Console.WriteLine("Заряд не может превышать 100!");
                }
            }
        }

        public Phone(string brand, int initialBattery)
        {
            Brand = brand;
            BatteryLevel = initialBattery;
        }

        public void Use()
        {
            BatteryLevel -= 10;
            if (BatteryLevel < 0)
            {
                BatteryLevel = 0;
            }
            Console.WriteLine($"{Brand}: заряд {BatteryLevel}%");
        }
    }

    class Program
    {
        static void Main(string[] args)
        {
            Phone iphone = new Phone("Iphone", 70);

            iphone.Use();
            iphone.Use();
            iphone.Use();

            iphone.BatteryLevel = 150;
        }
    }
}
